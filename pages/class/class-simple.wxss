/* pages/class/class-simple.wxss - 简化版班级管理样式 */

.container {
  padding: 0;
  background-color: #f8f9ff;
  min-height: 100vh;
}

/* 班级信息头部 */
.class-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.class-info {
  flex: 1;
}

.class-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.class-meta {
  display: flex;
  gap: 20rpx;
  font-size: 26rpx;
  opacity: 0.9;
}

.search-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.search-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

/* 搜索框 */
.search-bar {
  background-color: white;
  margin: -20rpx 30rpx 0;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: slideDown 0.3s ease-out;
}

.search-input {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
}

/* 快速统计 */
.quick-stats {
  display: flex;
  background-color: white;
  margin: 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #667eea;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 16rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon.homework {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.action-icon.attendance {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
}

.action-icon.message {
  background: linear-gradient(135deg, #43e97b, #38f9d7);
}

.action-icon.report {
  background: linear-gradient(135deg, #fa709a, #fee140);
}

.action-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 学生列表 */
.student-section {
  background-color: white;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-count {
  font-size: 26rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.student-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9ff;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.student-item:active {
  background-color: #f0f4ff;
  transform: scale(0.98);
}

.student-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.student-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 3rpx solid #fff;
}

.online-status {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 2rpx solid white;
}

.online-status.online {
  background-color: #43e97b;
}

.online-status.offline {
  background-color: #ccc;
}

.student-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.student-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.student-meta {
  display: flex;
  gap: 16rpx;
  font-size: 24rpx;
  color: #666;
}

.student-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
}

.homework-status {
  font-size: 24rpx;
}

.homework-status .completed {
  color: #43e97b;
  font-weight: 600;
}

.homework-status .total {
  color: #999;
}

.avg-score {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 最近活动 */
.activity-section {
  background-color: white;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.more-link {
  font-size: 26rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  background-color: #667eea10;
  border-radius: 16rpx;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  background-color: #f8f9ff;
  border-radius: 12rpx;
}

.activity-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.activity-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
}

/* 学生操作弹窗 */
.student-actions-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: flex-end;
  animation: fadeIn 0.3s ease-out;
}

.student-actions {
  background-color: white;
  width: 100%;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  animation: slideUp 0.3s ease-out;
}

.actions-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.actions-header .student-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.actions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background-color: #f8f9ff;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  background-color: #f0f4ff;
  transform: scale(0.98);
}

.action-btn text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 9998;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(100%);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .quick-actions {
    flex-wrap: wrap;
  }
  
  .action-item {
    width: calc(50% - 10rpx);
    margin-bottom: 20rpx;
  }
  
  .class-header {
    padding: 30rpx 20rpx 20rpx;
  }
  
  .quick-stats,
  .student-section,
  .activity-section {
    margin: 20rpx;
    padding: 24rpx;
  }
}