/* pages/class/class.wxss */
.class-container {
  padding: 0;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* È°∂ÈÉ®Áè≠Á∫ß‰ø°ÊÅØ */
.class-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.class-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.class-info {
  flex: 1;
  z-index: 1;
}

.class-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.class-desc {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.class-meta {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  opacity: 0.8;
}

.meta-item {
  color: white;
}

.meta-separator {
  margin: 0 12rpx;
  opacity: 0.6;
}

.class-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 5rpx;
}

.class-avatar {
  margin-left: 20rpx;
  z-index: 1;
}

/* ÂäüËÉΩÂØºËà™ */
.function-nav {
  background: white;
  display: flex;
  border-bottom: 1rpx solid #ebeef5;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #606266;
  position: relative;
  transition: all 0.3s ease;
}

.nav-item.active {
  color: #667eea;
  font-weight: bold;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
}

/* Ê†áÁ≠æÈ°µÂÜÖÂÆπ */
.tab-content {
  padding: 30rpx;
}

/* ÊêúÁ¥¢Ê†è */
.search-bar {
  margin-bottom: 30rpx;
}

/* Â≠¶ÁîüÂàóË°® */
.student-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.student-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
}

.student-item:last-child {
  border-bottom: none;
}

.student-item:active {
  background-color: #f8f9fa;
  transform: scale(0.98);
}

.student-avatar {
  position: relative;
  margin-right: 20rpx;
}

.online-status {
  position: absolute;
  bottom: 2rpx;
  right: 2rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 2rpx solid white;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.online-status.online {
  background-color: #67c23a;
  animation: pulse 2s infinite;
}

.online-status.offline {
  background-color: #909399;
}

@keyframes pulse {
  0% { box-shadow: 0 0 0 0 rgba(103, 194, 58, 0.7); }
  70% { box-shadow: 0 0 0 10rpx rgba(103, 194, 58, 0); }
  100% { box-shadow: 0 0 0 0 rgba(103, 194, 58, 0); }
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 8rpx;
}

.student-number {
  font-size: 26rpx;
  color: #909399;
  margin-bottom: 8rpx;
}

.student-stats {
  display: flex;
  gap: 20rpx;
  margin-bottom: 8rpx;
}

.stat {
  font-size: 24rpx;
  color: #606266;
}

.student-badges {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.badge {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  background: linear-gradient(45deg, #ffd700, #ffed4e);
  color: #8b4513;
  border-radius: 10rpx;
  font-weight: 500;
}

.student-actions {
  display: flex;
  gap: 12rpx;
  margin-left: 20rpx;
}

/* ÊéíË°åÊ¶ú */
.ranking-filters {
  margin-bottom: 30rpx;
}

.filter-tabs {
  display: flex;
  background: white;
  border-radius: 12rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #606266;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.ranking-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
}

.ranking-item:last-child {
  border-bottom: none;
}

.ranking-item.top-three {
  background: linear-gradient(90deg, #fff9e6 0%, #ffffff 100%);
}

.ranking-item.top-three::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(180deg, #ffd700 0%, #ffed4e 100%);
}

.rank-number {
  width: 60rpx;
  text-align: center;
  margin-right: 20rpx;
}

.rank-medal {
  font-size: 40rpx;
  line-height: 1;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10rpx); }
  60% { transform: translateY(-5rpx); }
}

.rank-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.rank-score {
  margin-left: auto;
  text-align: right;
}

.score-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.score-unit {
  font-size: 24rpx;
  color: #909399;
  margin-left: 4rpx;
}

.score-trend {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 4rpx;
  font-size: 20rpx;
}

.score-trend.up {
  color: #67c23a;
}

.score-trend.down {
  color: #f56c6c;
}

.trend-icon {
  margin-right: 4rpx;
}

/* Â∞èÁªÑÂØπÊäó */
.group-battle-header {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.group-battle-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.battle-info {
  flex: 1;
}

.battle-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 8rpx;
}

.battle-subtitle {
  font-size: 26rpx;
  color: #909399;
}

.battle-time {
  text-align: right;
}

.time-label {
  display: block;
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 4rpx;
}

.time-value {
  font-size: 28rpx;
  color: #e6a23c;
  font-weight: bold;
  padding: 8rpx 16rpx;
  background-color: #fdf6ec;
  border-radius: 20rpx;
}

.group-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.group-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
}

.group-item:last-child {
  border-bottom: none;
}

.group-item:active {
  background-color: #f8f9fa;
  transform: scale(0.98);
}

.group-item.leading {
  background: linear-gradient(90deg, #f0f9ff 0%, #ffffff 100%);
  border-left: 4rpx solid #667eea;
}

.group-item.leading::after {
  content: 'üèÜ';
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 24rpx;
  animation: rotate 3s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.group-rank {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #303133;
  margin-right: 20rpx;
  position: relative;
}

.group-item.leading .group-rank {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.rank-crown {
  position: absolute;
  top: -10rpx;
  right: -5rpx;
  font-size: 20rpx;
}

.group-info {
  flex: 1;
}

.group-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 10rpx;
}

.group-members {
  display: flex;
  align-items: center;
  gap: -10rpx;
  margin-bottom: 8rpx;
}

.member-avatar {
  border: 2rpx solid white;
  margin-left: -10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.member-avatar:first-child {
  margin-left: 0;
}

.member-count {
  font-size: 24rpx;
  color: #909399;
  margin-left: 16rpx;
}

.group-achievements {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.achievement {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  background: linear-gradient(45deg, #e6f7ff, #bae7ff);
  color: #1890ff;
  border-radius: 10rpx;
  font-weight: 500;
}

.group-score {
  text-align: center;
  margin: 0 30rpx;
}

.score {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  display: block;
}

.unit {
  font-size: 24rpx;
  color: #909399;
}

.score-growth {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 4rpx;
  font-size: 20rpx;
}

.score-growth.positive {
  color: #67c23a;
}

.score-growth.negative {
  color: #f56c6c;
}

.group-progress {
  width: 120rpx;
  text-align: center;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #606266;
}

.battle-rules {
  text-align: center;
  padding: 30rpx;
}

.rules-text {
  font-size: 28rpx;
  color: #667eea;
  text-decoration: underline;
  transition: all 0.3s ease;
}

.rules-text:active {
  color: #764ba2;
}

/* Áè≠Á∫ßÂä®ÊÄÅ */
.activity-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-item:active {
  background-color: #f8f9fa;
}

.activity-icon {
  font-size: 40rpx;
  width: 60rpx;
  text-align: center;
  margin-right: 20rpx;
}

.activity-content {
  flex: 1;
}

.activity-title {
  font-size: 30rpx;
  color: #303133;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.activity-description {
  font-size: 26rpx;
  color: #606266;
  margin-bottom: 8rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #909399;
}

.activity-type {
  margin-left: 20rpx;
}

.type-tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.type-tag.homework {
  background: #e6f7ff;
  color: #1890ff;
}

.type-tag.achievement {
  background: #fff7e6;
  color: #fa8c16;
}

.type-tag.praise {
  background: #f6ffed;
  color: #52c41a;
}

.type-tag.attendance {
  background: #f9f0ff;
  color: #722ed1;
}

.type-tag.interaction {
  background: #fff0f6;
  color: #eb2f96;
}

/* Âä†ËΩΩÁä∂ÊÄÅ */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* Á©∫Áä∂ÊÄÅ */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}

/* Â≠¶ÁîüËØ¶ÊÉÖÂºπÁ™ó */
.student-detail-popup {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #ebeef5;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
}

.popup-close {
  font-size: 40rpx;
  color: rgba(255,255,255,0.8);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.popup-close:active {
  background-color: rgba(255,255,255,0.1);
}

.popup-content {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.detail-avatar {
  text-align: center;
  margin-bottom: 30rpx;
}

.detail-badges {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  margin-top: 16rpx;
  flex-wrap: wrap;
}

.detail-info {
  margin-bottom: 40rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #606266;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #303133;
  font-weight: 500;
  flex: 1;
  text-align: right;
}

.detail-actions {
  display: flex;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #ebeef5;
}

/* ÂìçÂ∫îÂºèÈÄÇÈÖç */
@media (max-width: 375px) {
  .class-stats {
    flex-wrap: wrap;
    gap: 20rpx;
  }
  
  .stat-item {
    width: 30%;
  }
  
  .student-actions {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .group-item {
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .group-score,
  .group-progress {
    width: auto;
    margin: 0;
  }
}

/* Ê∑±Ëâ≤Ê®°ÂºèÈÄÇÈÖç */
@media (prefers-color-scheme: dark) {
  .class-container {
    background-color: #1a1a1a;
  }
  
  .function-nav,
  .student-list,
  .ranking-list,
  .group-list,
  .activity-list,
  .group-battle-header,
  .student-detail-popup {
    background: #2d2d2d;
    color: #fff;
  }
  
  .student-name,
  .group-name,
  .activity-title,
  .battle-title,
  .popup-title {
    color: #fff;
  }
  
  .student-number,
  .activity-description,
  .battle-subtitle,
  .label {
    color: #999;
  }
}