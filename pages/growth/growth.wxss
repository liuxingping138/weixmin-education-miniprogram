/* pages/growth/growth.wxss */
.growth-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

/* 顶部功能介绍 */
.header-section {
  padding: 40rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  margin-bottom: 20rpx;
}

.feature-intro {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.intro-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.intro-content {
  flex: 1;
}

.intro-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.intro-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

/* 学生选择器 */
.student-selector {
  margin-top: 30rpx;
}

.selector-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
}

.student-options {
  display: flex;
  gap: 20rpx;
}

.student-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.student-option.selected {
  background: rgba(255, 255, 255, 0.3);
  border-color: #ffffff;
  transform: translateY(-2rpx);
}

.student-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.student-name {
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
}

/* 功能导航 */
.nav-tabs {
  display: flex;
  background: #ffffff;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.nav-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.nav-tab.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  transition: transform 0.3s ease;
}

.nav-tab.active .tab-icon {
  transform: scale(1.1);
}

.tab-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  transition: color 0.3s ease;
}

.nav-tab.active .tab-text {
  color: #ffffff;
  font-weight: bold;
}

/* 标签页内容 */
.tab-content {
  padding: 0 30rpx;
}

/* 能力雷达图 */
.ability-radar {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.radar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.time-selector {
  display: flex;
  gap: 10rpx;
}

.time-option {
  padding: 10rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666666;
  transition: all 0.3s ease;
}

.time-option.active {
  border-color: #667eea;
  background: #667eea;
  color: #ffffff;
}

.radar-chart {
  position: relative;
  margin-bottom: 30rpx;
}

.radar-canvas {
  width: 100%;
  height: 400rpx;
  border-radius: 15rpx;
}

.ability-legend {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-top: 30rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  border-left: 6rpx solid #667eea;
}

.legend-name {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  margin-right: 15rpx;
}

.legend-score {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  margin-right: 10rpx;
}

.legend-level {
  font-size: 22rpx;
  color: #999999;
}

/* 能力详细分析 */
.ability-details {
  margin-top: 40rpx;
}

.details-header {
  margin-bottom: 30rpx;
}

.ability-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ability-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.ability-item:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.ability-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ffffff;
  margin-right: 20rpx;
}

.ability-info {
  flex: 1;
  margin-right: 20rpx;
}

.ability-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.ability-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.ability-progress {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  min-width: 60rpx;
}

.ability-trend {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 80rpx;
}

.trend-icon {
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

.trend-icon.up {
  color: #28a745;
}

.trend-icon.down {
  color: #dc3545;
}

.trend-icon.stable {
  color: #ffc107;
}

.trend-text {
  font-size: 22rpx;
  color: #666666;
}

/* 能力发展趋势 */
.ability-trends {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.trends-header {
  margin-bottom: 30rpx;
}

.trend-chart {
  margin-bottom: 30rpx;
}

.trend-canvas {
  width: 100%;
  height: 300rpx;
  border-radius: 15rpx;
}

.trend-summary {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.summary-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.summary-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 5rpx;
}

.summary-score {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
}

/* 档案概览 */
.archive-overview {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.student-profile {
  background: linear-gradient(135deg, #f8f9fa, #ffffff);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 2rpx solid #e9ecef;
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.profile-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 25rpx;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.profile-info {
  flex: 1;
  margin-right: 25rpx;
}

.profile-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.profile-class {
  font-size: 26rpx;
  color: #667eea;
  margin-bottom: 5rpx;
}

.profile-id {
  font-size: 24rpx;
  color: #666666;
}

.profile-stats {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.profile-stats .stat-item {
  text-align: center;
  padding: 15rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 10rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666666;
}

.profile-achievements {
  margin-top: 25rpx;
}

.achievements-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 15rpx;
}

.achievement-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.achievement-tag {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 20rpx;
}

/* 成长时间轴 */
.growth-timeline {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-filter {
  display: flex;
  gap: 10rpx;
}

.filter-option {
  padding: 10rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666666;
  transition: all 0.3s ease;
}

.filter-option.active {
  border-color: #667eea;
  background: #667eea;
  color: #ffffff;
}

.timeline-content {
  position: relative;
}

.timeline-event {
  display: flex;
  margin-bottom: 40rpx;
  position: relative;
}

.timeline-event:last-child {
  margin-bottom: 0;
}

.event-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 80rpx;
  margin-right: 20rpx;
}

.date-month {
  font-size: 22rpx;
  color: #999999;
  margin-bottom: 5rpx;
}

.date-day {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.event-line {
  width: 4rpx;
  background: linear-gradient(to bottom, #667eea, #764ba2);
  margin: 0 20rpx;
  position: relative;
}

.event-line::before {
  content: '';
  position: absolute;
  top: 15rpx;
  left: -8rpx;
  width: 20rpx;
  height: 20rpx;
  background: #667eea;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.event-content {
  flex: 1;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
}

.event-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.event-type {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #ffffff;
  margin-right: 15rpx;
}

.event-type.achievement {
  background: #28a745;
}

.event-type.activity {
  background: #ffc107;
}

.event-type.homework {
  background: #17a2b8;
}

.event-type.test {
  background: #dc3545;
}

.event-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-right: 15rpx;
}

.event-time {
  font-size: 22rpx;
  color: #999999;
}

.event-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.event-media {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.event-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.event-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.event-tag {
  padding: 6rpx 12rpx;
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  font-size: 20rpx;
  border-radius: 15rpx;
}

/* 学习统计 */
.learning-stats {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.stats-header {
  margin-bottom: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-card {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ffffff;
  margin-right: 20rpx;
}

.card-icon.homework {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.card-icon.test {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.card-icon.activity {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
}

.card-icon.points {
  background: linear-gradient(135deg, #43e97b, #38f9d7);
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.card-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: inline;
}

.card-total,
.card-unit {
  font-size: 24rpx;
  color: #999999;
  display: inline;
  margin-left: 5rpx;
}

.card-rate {
  font-size: 22rpx;
  color: #667eea;
  margin-top: 5rpx;
}

/* AI分析报告 */
.ai-analysis {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.analysis-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 综合评价 */
.overall-assessment {
  text-align: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #f8f9fa, #ffffff);
  border-radius: 20rpx;
  border: 2rpx solid #e9ecef;
}

.assessment-header {
  margin-bottom: 20rpx;
}

.assessment-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 15rpx;
}

.assessment-score {
  font-size: 72rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.assessment-level {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.assessment-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

/* 分析列表 */
.section-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.analysis-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.analysis-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  border-radius: 10rpx;
}

.analysis-item.strength {
  background: rgba(40, 167, 69, 0.1);
}

.analysis-item.improvement {
  background: rgba(255, 193, 7, 0.1);
}

.item-icon {
  font-size: 24rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
}

.item-text {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
}

/* 学习计划 */
.learning-plan {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
}

.plan-timeline {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.plan-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.plan-period {
  min-width: 100rpx;
  padding: 10rpx 15rpx;
  background: #667eea;
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 20rpx;
  text-align: center;
  margin-top: 5rpx;
}

.plan-content {
  flex: 1;
}

.plan-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10rpx;
}

.plan-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.plan-goals {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.plan-goal {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 历史报告 */
.history-reports {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.reports-header {
  margin-bottom: 30rpx;
}

.report-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.report-item:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.report-icon {
  margin-right: 20rpx;
}

.icon-bg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ffffff;
}

.icon-bg.ai {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.icon-bg.manual {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.report-info {
  flex: 1;
  margin-right: 20rpx;
}

.report-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10rpx;
}

.report-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.meta-icon {
  font-size: 20rpx;
  margin-right: 5rpx;
}

.report-summary {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.report-actions {
  display: flex;
  gap: 10rpx;
}

/* 能力详情弹窗 */
.ability-detail {
  background: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  background: #ffffff;
  z-index: 10;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.detail-close {
  font-size: 32rpx;
  color: #999999;
  padding: 10rpx;
}

.detail-content {
  padding: 30rpx;
}

.ability-overview {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
}

.overview-score {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.score-circle {
  width: 120rpx;
  height: 120rpx;
  border: 8rpx solid #667eea;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
