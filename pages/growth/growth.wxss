/* 加载状态 */
t-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
}

/* 空状态 */
t-empty {
  margin: 100rpx 0;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .ability-legend {
    grid-template-columns: 1fr;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .trend-summary {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .ability-overview {
    flex-direction: column;
    text-align: center;
  }
  
  .overview-score {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .growth-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .ability-radar,
  .ability-trends,
  .archive-overview,
  .growth-timeline,
  .learning-stats,
  .ai-analysis,
  .history-reports {
    background: #2c3e50;
    color: #ecf0f1;
  }
  
  .header-title,
  .detail-title {
    color: #ecf0f1;
  }
  
  .student-profile,
  .overall-assessment,
  .learning-plan,
  .ability-suggestions {
    background: #34495e;
    border-color: #4a5f7a;
  }
  
  .ability-item,
  .stat-card,
  .timeline-content,
  .report-item,
  .analysis-item {
    background: #34495e;
  }
  
  .time-option,
  .filter-option {
    border-color: #4a5f7a;
    color: #ecf0f1;
  }
  
  .time-option.active,
  .filter-option.active {
    background: #667eea;
    border-color: #667eea;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tab-content {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.radar-canvas,
.trend-canvas {
  animation: scaleIn 0.5s ease-out;
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.timeline-event {
  animation: slideInLeft 0.5s ease-out;
}

.timeline-event:nth-child(even) {
  animation-delay: 0.1s;
}

.timeline-event:nth-child(odd) {
  animation-delay: 0.2s;
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.assessment-score {
  animation: bounceIn 0.8s ease-out;
}

@keyframes progressFill {
  from {
    width: 0;
  }
  to {
    width: var(--progress-width);
  }
}

.progress-fill {
  animation: progressFill 1s ease-out;
}