/* pages/homework/create-simple.wxss - 简化版作业发布样式 */

.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 200rpx;
}

.content {
  padding: 32rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 快速模板 */
.template-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.template-list {
  display: flex;
  gap: 24rpx;
  margin-top: 24rpx;
}

.template-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.template-item:active {
  background: #e3f2fd;
  border-color: #2196f3;
  transform: scale(0.98);
}

.template-item text {
  font-size: 24rpx;
  color: #333;
  margin-top: 8rpx;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.required {
  color: #e34d59;
  font-size: 24rpx;
}

.optional {
  color: #999;
  font-size: 24rpx;
  font-weight: normal;
  margin-left: auto;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
}

.datetime-picker {
  display: flex;
  gap: 16rpx;
}

.picker-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
}

.error-text {
  color: #e34d59;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 班级选择 */
.class-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.class-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s ease;
}

.class-item.selected {
  background: #e3f2fd;
  border-color: #0052d9;
}

.class-item:active {
  transform: scale(0.98);
}

.class-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.class-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.student-count {
  font-size: 24rpx;
  color: #666;
}

/* 题目设置 */
.empty-questions {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
  color: #999;
  font-size: 28rpx;
}

.questions-list {
  margin-bottom: 32rpx;
}

.question-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #e0e0e0;
}

.question-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.question-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #0052d9;
}

.question-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.points-input {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.points-input input {
  width: 80rpx;
  padding: 8rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  text-align: center;
  font-size: 24rpx;
}

.question-content {
  margin-bottom: 16rpx;
}

.question-answer {
  border-top: 1rpx solid #e0e0e0;
  padding-top: 16rpx;
}

.add-question {
  text-align: center;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: white;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-buttons .t-button {
  flex: 1;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .template-list {
    flex-direction: column;
  }
  
  .datetime-picker {
    flex-direction: column;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .action-buttons .t-button {
    flex: none;
  }
}