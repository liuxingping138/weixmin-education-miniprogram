/* pages/homework/homework.wxss */
.homework-container {
  padding: 0;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 顶部统计信息 */
.homework-header {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.stats-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 功能导航 */
.function-nav {
  display: flex;
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.nav-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 600;
}

/* 标签页内容 */
.tab-content {
  padding: 0 20rpx;
}

/* 筛选器 */
.filter-bar {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.filter-tabs {
  display: flex;
  gap: 20rpx;
}

.filter-tab {
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f7fa;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #667eea;
  color: white;
}

/* 作业列表 */
.homework-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.homework-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.homework-item:active {
  transform: scale(0.98);
}

.homework-header-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.homework-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.homework-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.homework-status.pending {
  background: #fff3cd;
  color: #856404;
}

.homework-status.completed {
  background: #d4edda;
  color: #155724;
}

.homework-status.overdue {
  background: #f8d7da;
  color: #721c24;
}

.homework-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.meta-label {
  color: #666;
  margin-right: 8rpx;
}

.meta-value {
  color: #333;
  font-weight: 500;
}

.homework-progress {
  margin-bottom: 20rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.score {
  color: #333;
  font-weight: 600;
}

.accuracy {
  color: #667eea;
  font-weight: 600;
}

.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #67c23a 0%, #85ce61 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.homework-actions {
  display: flex;
  gap: 20rpx;
}

/* 错题本样式 */
.mistakes-stats {
  margin-bottom: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.subject-filter {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.subject-scroll {
  white-space: nowrap;
}

.subject-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f7fa;
  transition: all 0.3s ease;
}

.subject-item.active {
  background: #667eea;
  color: white;
}

.mistake-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.mistake-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.mistake-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.mistake-subject {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
}

.mistake-status {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.mistake-status.weak {
  background: #f8d7da;
  color: #721c24;
}

.mistake-status.reviewing {
  background: #fff3cd;
  color: #856404;
}

.mistake-status.mastered {
  background: #d4edda;
  color: #155724;
}

.mistake-content {
  margin-bottom: 20rpx;
}

.question-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.mistake-info {
  display: flex;
  gap: 30rpx;
  font-size: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-label {
  color: #666;
  margin-right: 8rpx;
}

.info-value {
  color: #333;
  font-weight: 500;
}

.mistake-actions {
  display: flex;
  gap: 20rpx;
}

/* 学习分析样式 */
.analysis-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.title-desc {
  font-size: 26rpx;
  color: #666;
}

.radar-chart,
.trend-chart {
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

.knowledge-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.knowledge-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  gap: 20rpx;
}

.knowledge-info {
  flex: 1;
}

.knowledge-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.knowledge-subject {
  font-size: 24rpx;
  color: #666;
}

.knowledge-progress {
  flex: 2;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
  min-width: 60rpx;
}

.suggestion-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  gap: 20rpx;
}

.suggestion-icon {
  font-size: 40rpx;
  width: 60rpx;
  text-align: center;
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.suggestion-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 弹窗样式 */
.homework-detail-popup {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.popup-close {
  font-size: 48rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-content {
  padding: 30rpx;
}

.detail-info {
  margin-bottom: 40rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.detail-item .label {
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.detail-item .value {
  color: #333;
  flex: 1;
  font-weight: 500;
}

.detail-actions {
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .stats-grid {
    flex-wrap: wrap;
  }
  
  .stat-item {
    width: 50%;
    margin-bottom: 20rpx;
  }
  
  .homework-meta {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .homework-actions {
    flex-direction: column;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.homework-item,
.mistake-item,
.analysis-section {
  animation: fadeIn 0.3s ease-out;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .homework-container {
    background-color: #1a1a1a;
  }
  
  .stats-card,
  .function-nav,
  .filter-bar,
  .homework-item,
  .mistake-item,
  .analysis-section {
    background: #2d2d2d;
    color: #fff;
  }
  
  .stat-number,
  .homework-title,
  .meta-value,
  .question-text,
  .title-text {
    color: #fff;
  }
  
  .stat-label,
  .meta-label,
  .info-label,
  .title-desc {
    color: #999;
  }
}