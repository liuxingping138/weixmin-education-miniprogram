/* components/common-header/common-header.wxss */
.header-container {
  position: relative;
  padding: 20rpx;
  overflow: hidden;
}

.header-container.default {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header-container.gradient {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.header-container.image {
  background: rgba(0, 0, 0, 0.3);
}

.header-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 导航栏 */
.header-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding-top: var(--status-bar-height, 44rpx);
}

.nav-left,
.nav-right {
  width: 120rpx;
  display: flex;
  align-items: center;
}

.nav-right {
  justify-content: flex-end;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.back-btn,
.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  margin-left: 16rpx;
}

.back-icon,
.action-icon {
  font-size: 32rpx;
  color: white;
}

/* 主要内容 */
.header-content {
  padding: 40rpx 0;
}

.content-main {
  text-align: center;
  margin-bottom: 40rpx;
}

.main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.main-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 统计数据 */
.header-stats {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}