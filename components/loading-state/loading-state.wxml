<!--components/loading-state/loading-state.wxml-->
<view wx:if="{{loading}}" class="loading-container">
  <view class="loading-content">
    <!-- 旋转加载器 -->
    <view wx:if="{{type === 'spinner'}}" class="spinner {{size}}">
      <view class="spinner-item"></view>
      <view class="spinner-item"></view>
      <view class="spinner-item"></view>
      <view class="spinner-item"></view>
      <view class="spinner-item"></view>
      <view class="spinner-item"></view>
      <view class="spinner-item"></view>
      <view class="spinner-item"></view>
    </view>
    
    <!-- 点状加载器 -->
    <view wx:elif="{{type === 'dots'}}" class="dots {{size}}">
      <view class="dot"></view>
      <view class="dot"></view>
      <view class="dot"></view>
    </view>
    
    <!-- 圆形加载器 -->
    <view wx:elif="{{type === 'circular'}}" class="circular {{size}}">
      <view class="circular-path"></view>
    </view>
    
    <!-- 加载文本 -->
    <view class="loading-text">{{text}}</view>
  </view>
</view>