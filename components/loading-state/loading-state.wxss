/* components/loading-state/loading-state.wxss */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}

/* 旋转加载器 */
.spinner {
  position: relative;
  display: inline-block;
}

.spinner.small {
  width: 40rpx;
  height: 40rpx;
}

.spinner.medium {
  width: 60rpx;
  height: 60rpx;
}

.spinner.large {
  width: 80rpx;
  height: 80rpx;
}

.spinner-item {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: #007aff;
  border-radius: 50%;
  animation: spinner-fade 1.2s linear infinite;
}

.spinner.small .spinner-item {
  width: 4rpx;
  height: 4rpx;
}

.spinner.large .spinner-item {
  width: 12rpx;
  height: 12rpx;
}

.spinner-item:nth-child(1) {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 0s;
}

.spinner-item:nth-child(2) {
  top: 15%;
  right: 15%;
  animation-delay: -0.15s;
}

.spinner-item:nth-child(3) {
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  animation-delay: -0.3s;
}

.spinner-item:nth-child(4) {
  bottom: 15%;
  right: 15%;
  animation-delay: -0.45s;
}

.spinner-item:nth-child(5) {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: -0.6s;
}

.spinner-item:nth-child(6) {
  bottom: 15%;
  left: 15%;
  animation-delay: -0.75s;
}

.spinner-item:nth-child(7) {
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  animation-delay: -0.9s;
}

.spinner-item:nth-child(8) {
  top: 15%;
  left: 15%;
  animation-delay: -1.05s;
}

@keyframes spinner-fade {
  0%, 39%, 100% {
    opacity: 0;
  }
  40% {
    opacity: 1;
  }
}

/* 点状加载器 */
.dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  border-radius: 50%;
  background: #007aff;
  animation: dots-bounce 1.4s ease-in-out infinite both;
}

.dots.small .dot {
  width: 8rpx;
  height: 8rpx;
}

.dots.medium .dot {
  width: 12rpx;
  height: 12rpx;
}

.dots.large .dot {
  width: 16rpx;
  height: 16rpx;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes dots-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 圆形加载器 */
.circular {
  position: relative;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
  animation: circular-rotate 2s linear infinite;
}

.circular.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 2rpx;
}

.circular.medium {
  width: 60rpx;
  height: 60rpx;
  border-width: 4rpx;
}

.circular.large {
  width: 80rpx;
  height: 80rpx;
  border-width: 6rpx;
}

.circular-path {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  border-top-color: #007aff;
  animation: circular-dash 1.5s ease-in-out infinite;
}

.circular.small .circular-path {
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border-width: 2rpx;
}

.circular.large .circular-path {
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border-width: 6rpx;
}

@keyframes circular-rotate {
  100% {
    transform: rotate(360deg);
  }
}

@keyframes circular-dash {
  0% {
    border-top-color: #007aff;
    transform: rotate(0deg);
  }
  50% {
    border-top-color: transparent;
    transform: rotate(180deg);
  }
  100% {
    border-top-color: #007aff;
    transform: rotate(360deg);
  }
}