/* components/guide/guide.wxss */

.guide-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease-out;
}

.guide-content {
  background-color: white;
  margin: 60rpx;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.4s ease-out;
}

.guide-step {
  text-align: center;
}

.guide-icon {
  margin-bottom: 30rpx;
}

.guide-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  line-height: 1.3;
}

.guide-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 50rpx;
  display: block;
}

.guide-actions {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.guide-btn {
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  border: none;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.guide-btn.primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.guide-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.guide-btn.secondary {
  background-color: #f8f9ff;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.guide-btn.secondary:active {
  background-color: #f0f0f0;
  transform: translateY(1rpx);
}

.guide-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.progress-dots {
  display: flex;
  gap: 12rpx;
}

.progress-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  transition: all 0.3s ease;
}

.progress-dot.active {
  background-color: #667eea;
  transform: scale(1.2);
}

.progress-text {
  font-size: 24rpx;
  color: #999;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .guide-content {
    margin: 40rpx 30rpx;
    padding: 40rpx 30rpx;
  }
  
  .guide-actions {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .guide-btn {
    width: 100%;
  }
}