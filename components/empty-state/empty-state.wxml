<!--components/empty-state/empty-state.wxml-->
<view wx:if="{{show}}" class="empty-container">
  <view class="empty-content">
    <view class="empty-icon">{{icon}}</view>
    <view class="empty-title">{{title}}</view>
    <view wx:if="{{description}}" class="empty-description">{{description}}</view>
    <view wx:if="{{buttonText}}" class="empty-action">
      <t-button 
        theme="{{buttonType}}" 
        size="medium"
        bindtap="onButtonTap"
      >
        {{buttonText}}
      </t-button>
    </view>
    <slot name="action"></slot>
  </view>
</view>