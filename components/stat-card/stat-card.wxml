<!--components/stat-card/stat-card.wxml-->
<view class="stat-card {{background}} {{layout}}">
  <view wx:if="{{title}}" class="card-title">{{title}}</view>
  
  <view class="stats-container">
    <view wx:for="{{stats}}" 
          wx:key="label" 
          class="stat-item"
          data-stat="{{item}}"
          bindtap="onStatTap">
      <view class="stat-value">{{item.value}}</view>
      <view class="stat-label">{{item.label}}</view>
      <view wx:if="{{item.trend}}" class="stat-trend {{item.trend}}">
        <text class="trend-icon">{{item.trend === 'up' ? '↗' : item.trend === 'down' ? '↘' : '→'}}</text>
        <text wx:if="{{item.change}}" class="trend-text">{{item.change}}</text>
      </view>
    </view>
  </view>
  
  <slot></slot>
</view>