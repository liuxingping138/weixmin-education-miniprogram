/* components/stat-card/stat-card.wxss */
.stat-card {
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stat-card.white {
  background: white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.stat-card.gradient {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.stat-card.transparent {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  color: white;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: inherit;
}

.stats-container.grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.stats-container.row {
  display: flex;
  justify-content: space-between;
}

.stats-container.column {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
}

.grid .stat-item {
  flex: 1;
  min-width: 0;
}

.row .stat-item {
  flex: 1;
}

.column .stat-item {
  flex-direction: row;
  text-align: left;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
  color: inherit;
}

.column .stat-value {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 8rpx;
  color: inherit;
}

.column .stat-label {
  margin-top: 0;
  flex: 1;
}

.stat-trend {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  font-size: 20rpx;
}

.stat-trend.up {
  color: #34c759;
}

.stat-trend.down {
  color: #ff3b30;
}

.stat-trend.stable {
  color: #999;
}

.trend-icon {
  margin-right: 4rpx;
}

.trend-text {
  font-weight: 500;
}