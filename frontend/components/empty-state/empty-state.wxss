/* components/empty-state/empty-state.wxss */
.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  min-height: 400rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  max-width: 500rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
  line-height: 1;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-description {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.empty-action {
  margin-top: 20rpx;
}