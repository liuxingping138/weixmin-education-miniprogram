/* 全局样式 - 简洁版班级管理 */

/* 基础样式重置 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.page-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

/* 按钮样式 */
.btn {
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background-color: #4A90E2;
  color: #ffffff;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #666666;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin: 4rpx 8rpx 4rpx 0;
}

.tag-primary {
  background-color: #E3F2FD;
  color: #1976D2;
}

.tag-success {
  background-color: #E8F5E8;
  color: #2E7D32;
}

.tag-warning {
  background-color: #FFF3E0;
  color: #F57C00;
}

.tag-danger {
  background-color: #FFEBEE;
  color: #C62828;
}

/* 列表样式 */
.list-item {
  background-color: #ffffff;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.list-item-desc {
  font-size: 26rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 统计数据样式 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stats-item {
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stats-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #4A90E2;
  line-height: 1;
}

.stats-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 工具类 */
.text-center {
  text-align: center;
}

.text-primary {
  color: #4A90E2;
}

.text-success {
  color: #2E7D32;
}

.text-warning {
  color: #F57C00;
}

.text-danger {
  color: #C62828;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}