/* pages/help/help.wxss - 使用帮助页面样式 */

.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 页面标题 */
.page-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 48rpx 32rpx 32rpx;
  background: white;
  margin-bottom: 16rpx;
}

.header-text {
  flex: 1;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 标签页内容 */
.tab-content {
  padding: 32rpx;
}

/* 帮助内容 */
.help-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.help-item {
  margin-bottom: 32rpx;
}

.help-item:last-child {
  margin-bottom: 0;
}

.help-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.help-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.help-steps {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  background: #0052d9;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.step-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  padding-top: 8rpx;
}

/* 常见问题 */
.faq-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.faq-item {
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-item.expanded {
  background: #f8f9fa;
}

.faq-question {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx;
  cursor: pointer;
}

.question-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.faq-answer {
  padding: 0 32rpx 32rpx 80rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 联系我们 */
.contact-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.contact-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 48rpx;
  text-align: center;
}

.contact-title {
  flex: 1;
}

.contact-title .title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.contact-title .subtitle {
  font-size: 26rpx;
  color: #666;
}

.contact-list {
  margin-bottom: 48rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.contact-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.contact-label {
  font-size: 26rpx;
  color: #666;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.contact-actions {
  display: flex;
  gap: 16rpx;
}

.contact-actions .t-button {
  flex: 1;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .page-header {
    padding: 32rpx 24rpx 24rpx;
  }
  
  .tab-content {
    padding: 24rpx;
  }
  
  .help-section,
  .contact-section {
    padding: 24rpx;
  }
  
  .contact-actions {
    flex-direction: column;
  }
  
  .contact-actions .t-button {
    flex: none;
  }
}