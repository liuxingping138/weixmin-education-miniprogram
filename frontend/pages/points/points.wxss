/* pages/points/points.wxss */
.points-container {
  padding: 0;
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部积分信息 */
.points-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.points-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.points-card {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.points-info {
  text-align: center;
  margin-bottom: 32rpx;
}

.current-points {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 12rpx;
}

.points-number {
  font-size: 80rpx;
  font-weight: bold;
  color: white;
  line-height: 1;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.points-unit {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-left: 12rpx;
  font-weight: 500;
}

.points-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
}

.level-info {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.level-badge {
  background: rgba(255, 255, 255, 0.25);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  backdrop-filter: blur(10rpx);
}

.level-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.points-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.3s ease;
}

.stat-item:active {
  transform: scale(0.95);
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  line-height: 1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.today-earned {
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 16rpx;
  backdrop-filter: blur(10rpx);
}

.earned-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 功能导航 */
.function-nav {
  background: white;
  display: flex;
  border-bottom: 1rpx solid #ebeef5;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 16rpx;
  position: relative;
  transition: all 0.3s ease;
  color: #606266;
}

.nav-item.active {
  color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
}

.nav-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.nav-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 标签页内容 */
.tab-content {
  padding: 32rpx;
}

/* 商品分类 */
.category-tabs {
  margin-bottom: 32rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 28rpx;
  margin-right: 24rpx;
  background: white;
  border-radius: 24rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  white-space: nowrap;
}

.category-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.category-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  font-weight: 500;
}

/* 商品网格 */
.goods-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.goods-item {
  width: calc(50% - 12rpx);
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.goods-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.goods-image {
  position: relative;
  width: 100%;
  height: 240rpx;
  overflow: hidden;
}

.goods-image image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.goods-item:active .goods-image image {
  transform: scale(1.05);
}

.goods-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: bold;
  z-index: 2;
}

.goods-badge.hot {
  background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
  color: white;
}

.goods-badge.new {
  background: linear-gradient(45deg, #4ecdc4, #44a08d);
  color: white;
}

.goods-badge.discount {
  background: linear-gradient(45deg, #ffa726, #ffcc02);
  color: white;
}

.goods-stock {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: rgba(255, 165, 0, 0.9);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.goods-sold-out {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 3;
}

.goods-info {
  padding: 24rpx;
}

.goods-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-desc {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.4;
}

.goods-sales {
  font-size: 22rpx;
  color: #c0c4cc;
  margin-bottom: 16rpx;
}

.goods-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-info {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
}

.price-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  line-height: 1;
}

.price-unit {
  font-size: 24rpx;
  color: #909399;
  margin-left: 6rpx;
}

.original-price {
  font-size: 22rpx;
  color: #c0c4cc;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.exchange-btn {
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 24rpx;
  font-size: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.exchange-btn.disabled {
  background: #c0c4cc;
  color: #909399;
  box-shadow: none;
}

.exchange-btn:not(.disabled):active {
  transform: scale(0.95);
}

/* 任务部分 */
.task-section {
  margin-bottom: 48rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.title-left {
  flex: 1;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 8rpx;
  display: block;
}

.title-desc {
  font-size: 26rpx;
  color: #909399;
}

.title-right {
  margin-left: 20rpx;
}

.refresh-time {
  font-size: 22rpx;
  color: #c0c4cc;
  background: #f5f7fa;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.task-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.task-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
}

.task-item:last-child {
  border-bottom: none;
}

.task-item.completed {
  opacity: 0.6;
  background: linear-gradient(90deg, #f8f9fa 0%, #ffffff 100%);
}

.task-item.completed::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: repeating-linear-gradient(
    45deg,
    transparent,
    transparent 10rpx,
    rgba(0, 0, 0, 0.02) 10rpx,
    rgba(0, 0, 0, 0.02) 20rpx
  );
  pointer-events: none;
}

.task-item.weekly {
  background: linear-gradient(90deg, #fff9e6 0%, #ffffff 100%);
  border-left: 4rpx solid #e6a23c;
}

.task-item.achievement {
  background: linear-gradient(90deg, #f0f8ff 0%, #ffffff 100%);
  border-left: 4rpx solid #667eea;
}

.task-item.achievement.easy {
  border-left-color: #67c23a;
}

.task-item.achievement.medium {
  border-left-color: #e6a23c;
}

.task-item.achievement.hard {
  border-left-color: #f56c6c;
}

.task-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.task-info {
  flex: 1;
  margin-right: 24rpx;
}

.task-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.task-desc {
  font-size: 26rpx;
  color: #909399;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.task-progress {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #606266;
  white-space: nowrap;
  font-weight: 500;
}

.difficulty-badge {
  margin-top: 12rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: bold;
  display: inline-block;
}

.difficulty-badge.easy {
  background: #f0f9ff;
  color: #67c23a;
}

.difficulty-badge.medium {
  background: #fdf6ec;
  color: #e6a23c;
}

.difficulty-badge.hard {
  background: #fef0f0;
  color: #f56c6c;
}

.task-reward {
  text-align: center;
  flex-shrink: 0;
}

.reward-points {
  font-size: 32rpx;
  font-weight: bold;
  color: #67c23a;
  display: block;
  margin-bottom: 12rpx;
}

.task-btn {
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  text-align: center;
  min-width: 100rpx;
  transition: all 0.3s ease;
  font-weight: 500;
}

.task-btn.can-complete {
  background: linear-gradient(135deg, #67c23a 0%, #85ce61 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(103, 194, 58, 0.3);
}

.task-btn.completed {
  background: #f0f0f0;
  color: #909399;
}

.task-btn.disabled {
  background: #f5f7fa;
  color: #c0c4cc;
}

.task-btn:not(.disabled):not(.completed):active {
  transform: scale(0.95);
}

/* 记录筛选 */
.record-filters {
  margin-bottom: 32rpx;
}

.filter-tabs {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.filter-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  color: #606266;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.filter-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.filter-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 记录列表 */
.record-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.record-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.record-item:last-child {
  border-bottom: none;
}

.record-item:active {
  background: #f8f9fa;
}

.record-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.record-icon.earn {
  background: linear-gradient(135deg, #67c23a 0%, #85ce61 100%);
}

.record-icon.spend {
  background: linear-gradient(135deg, #f56c6c 0%, #f78989 100%);
}

.icon-text {
  font-size: 32rpx;
}

.record-info {
  flex: 1;
  margin-right: 24rpx;
}

.record-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.record-desc {
  font-size: 26rpx;
  color: #909399;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.record-time {
  font-size: 24rpx;
  color: #c0c4cc;
}

.record-points {
  text-align: right;
  flex-shrink: 0;
}

.points-change {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 4rpx;
  display: block;
}

.points-change.earn {
  color: #67c23a;
}

.points-change.spend {
  color: #f56c6c;
}

.points-unit {
  font-size: 24rpx;
  color: #909399;
}

/* 排行榜 */
.my-ranking {
  margin-bottom: 32rpx;
}

.ranking-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 20rpx;
  text-align: center;
}

.ranking-item {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.ranking-item.my-rank {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.ranking-item.is-me {
  border: 3rpx solid #667eea;
  background: #f8f9ff;
}

.ranking-item:active {
  transform: translateY(-2rpx);
}

.rank-number {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.rank-number.top-three {
  font-size: 40rpx;
}

.ranking-item:not(.my-rank) .rank-number {
  background: #f5f7fa;
  color: #606266;
}

.ranking-item.my-rank .rank-number {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  position: relative;
  flex-shrink: 0;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.level-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 32rpx;
  height: 32rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  border: 2rpx solid white;
}

.user-info {
  flex: 1;
  margin-right: 24rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.ranking-item:not(.my-rank) .user-name {
  color: #303133;
}

.ranking-item.my-rank .user-name {
  color: white;
}

.user-level {
  font-size: 24rpx;
  opacity: 0.8;
}

.user-points {
  text-align: right;
  flex-shrink: 0;
}

.points-number {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 4rpx;
  display: block;
}

.ranking-item:not(.my-rank) .points-number {
  color: #667eea;
}

.ranking-item.my-rank .points-number {
  color: white;
}

.weekly-increase {
  margin-top: 8rpx;
}

.increase-text {
  font-size: 22rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.ranking-item:not(.my-rank) .increase-text {
  background: #f0f8ff;
  color: #67c23a;
}

.ranking-item.my-rank .increase-text {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #909399;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #909399;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 26rpx;
  color: #c0c4cc;
  line-height: 1.5;
}

/* Toast提示 */
.toast-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  animation: fadeInOut 2s ease-in-out;
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0; transform: translate(-50%, -50%) scale(0.8); }
  20%, 80% { opacity: 1; transform: translate(-50%, -50%) scale(1); }
}

.toast-message {
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

/* 弹窗样式 */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 商品详情弹窗 */
.goods-detail-popup {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  width: 100%;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #ebeef5;
  position: sticky;
  top: 0;
  background: white;
  z-index: 10;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
}

.popup-close {
  font-size: 48rpx;
  color: #909399;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.popup-close:active {
  background: #f5f7fa;
  transform: scale(0.9);
}

.popup-content {
  padding: 40rpx;
  max-height: calc(80vh - 120rpx);
  overflow-y: auto;
}

.detail-image {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  position: relative;
}

.detail-image image {
  width: 100%;
  height: 100%;
}

.image-badges {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.badge {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.detail-info {
  margin-bottom: 40rpx;
}

.detail-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.detail-desc {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.detail-meta {
  display: flex;
  gap: 32rpx;
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-label {
  font-size: 26rpx;
  color: #909399;
  margin-right: 8rpx;
}

.meta-value {
  font-size: 26rpx;
  color: #303133;
  font-weight: 500;
}

.detail-price {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  gap: 12rpx;
}

.detail-price .price-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

.detail-price .price-unit {
  font-size: 28rpx;
  color: #909399;
}

.detail-price .original-price {
  font-size: 24rpx;
  color: #c0c4cc;
  text-decoration: line-through;
}

.detail-actions {
  padding-top: 32rpx;
  border-top: 1rpx solid #f0f0f0;
  position: sticky;
  bottom: 0;
  background: white;
}

.exchange-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.exchange-button.disabled {
  background: #c0c4cc;
  color: #909399;
  box-shadow: none;
}

.exchange-button:not(.disabled):active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

/* 升级弹窗 */
.level-up-popup {
  background: white;
  border-radius: 24rpx;
  margin: 80rpx 40rpx;
  overflow: hidden;
  animation: bounceIn 0.5s ease;
}

@keyframes bounceIn {
  0% { transform: scale(0.3); opacity: 0; }
  50% { transform: scale(1.05); }
  70% { transform: scale(0.9); }
  100% { transform: scale(1); opacity: 1; }
}

.level-up-content {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.level-up-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  animation: bounce 1s ease infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-20rpx); }
  60% { transform: translateY(-10rpx); }
}

.level-up-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 40rpx;
}

.level-progress {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  gap: 32rpx;
}

.old-level, .new-level {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.level-name {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 8rpx;
}

.level-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
}

.level-arrow {
  font-size: 32rpx;
  color: #909399;
}

.level-rewards {
  margin-bottom: 40rpx;
}

.rewards-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 24rpx;
}

.rewards-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.reward-item {
  background: #f8f9ff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.reward-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

.level-up-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.level-up-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .goods-grid {
    flex-direction: column;
  }
  
  .goods-item {
    width: 100%;
  }
  
  .points-stats {
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .stat-item {
    min-width: calc(33.333% - 12rpx);
  }
  
  .task-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
  
  .task-reward {
    align-self: flex-end;
  }
  
  .record-item {
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .ranking-item {
    flex-wrap: wrap;
    gap: 16rpx;
  }
}