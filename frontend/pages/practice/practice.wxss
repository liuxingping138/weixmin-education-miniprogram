/* pages/practice/practice.wxss */

.practice-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

/* 顶部功能介绍 */
.practice-header {
  padding: 40rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 30rpx;
}

.header-content {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.header-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  min-width: 120rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 功能导航 */
.practice-nav {
  display: flex;
  background: #ffffff;
  margin: 0 30rpx 30rpx;
  border-radius: 25rpx;
  padding: 8rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #666666;
  transition: all 0.3s ease;
}

.nav-item.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

/* 标签页内容 */
.tab-content {
  padding: 0 30rpx;
}

/* AI推荐练习 */
.recommend-reason {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.reason-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
}

.reason-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.practice-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.practice-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.practice-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.subject-tag {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.subject-tag.math {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
}

.subject-tag.chinese {
  background: linear-gradient(135deg, #feca57, #ff9ff3);
}

.subject-tag.english {
  background: linear-gradient(135deg, #48dbfb, #0abde3);
}

.subject-tag.physics {
  background: linear-gradient(135deg, #ff9ff3, #f368e0);
}

.subject-tag.chemistry {
  background: linear-gradient(135deg, #54a0ff, #2e86de);
}

.difficulty-tag {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  border: 2rpx solid;
}

.difficulty-tag.easy {
  color: #27ae60;
  border-color: #27ae60;
  background: rgba(39, 174, 96, 0.1);
}

.difficulty-tag.medium {
  color: #f39c12;
  border-color: #f39c12;
  background: rgba(243, 156, 18, 0.1);
}

.difficulty-tag.hard {
  color: #e74c3c;
  border-color: #e74c3c;
  background: rgba(231, 76, 60, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.card-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.card-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stat {
  font-size: 24rpx;
  color: #999999;
}

.stat.accuracy {
  color: #667eea;
  font-weight: bold;
}

/* 学科练习 */
.subject-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.subject-item {
  flex: 1;
  min-width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.subject-item.selected {
  background: linear-gradient(135deg, #667eea, #764ba2);
  transform: translateY(-5rpx);
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.3);
}

.subject-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
}

.subject-icon.math {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
}

.subject-icon.chinese {
  background: linear-gradient(135deg, #feca57, #ff9ff3);
}

.subject-icon.english {
  background: linear-gradient(135deg, #48dbfb, #0abde3);
}

.subject-icon.physics {
  background: linear-gradient(135deg, #ff9ff3, #f368e0);
}

.subject-icon.chemistry {
  background: linear-gradient(135deg, #54a0ff, #2e86de);
}

.subject-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.subject-item.selected .subject-name {
  color: #ffffff;
}

.knowledge-points {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 4rpx;
}

.points-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.point-item {
  padding: 20rpx 25rpx;
  background: #ffffff;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 3rpx solid transparent;
}

.point-item:active {
  transform: scale(0.95);
}

.point-item.high {
  border-color: #27ae60;
  background: rgba(39, 174, 96, 0.05);
}

.point-item.medium {
  border-color: #f39c12;
  background: rgba(243, 156, 18, 0.05);
}

.point-item.low {
  border-color: #e74c3c;
  background: rgba(231, 76, 60, 0.05);
}

.point-name {
  font-size: 28rpx;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.mastery-rate {
  font-size: 24rpx;
  color: #666666;
}

.practice-settings {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.setting-item {
  margin-bottom: 30rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  display: block;
  margin-bottom: 20rpx;
}

.quantity-selector,
.difficulty-selector {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.quantity-option,
.difficulty-option {
  padding: 15rpx 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666666;
  background: #ffffff;
  transition: all 0.3s ease;
}

.quantity-option.selected,
.difficulty-option.selected {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
}

.start-practice-btn {
  margin-top: 40rpx;
  width: 100%;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
}

/* 模拟考试 */
.exam-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.exam-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.exam-card:active {
  transform: scale(0.98);
}

.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.exam-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.exam-type {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.exam-info {
  display: flex;
  gap: 30rpx;
  margin-bottom: 15rpx;
}

.info-item {
  font-size: 26rpx;
  color: #666666;
}

.exam-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.exam-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.best-score {
  font-size: 26rpx;
  color: #27ae60;
  font-weight: 500;
}

.attempt-count {
  font-size: 26rpx;
  color: #999999;
}

/* 练习记录 */
.history-filter {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.picker-value {
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666666;
  text-align: center;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.practice-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.practice-date {
  font-size: 24rpx;
  color: #999999;
}

.history-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.stat-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.stat-value.accuracy {
  color: #27ae60;
}

.stat-value.score {
  color: #667eea;
}

.history-tags {
  display: flex;
  gap: 15rpx;
}

.type-tag {
  padding: 6rpx 12rpx;
  background: #f8f9fa;
  color: #666666;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.load-more {
  text-align: center;
  margin-top: 30rpx;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .header-stats {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .stat-item {
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
  }
  
  .subject-selector {
    flex-direction: column;
  }
  
  .subject-item {
    flex-direction: row;
    justify-content: flex-start;
    gap: 20rpx;
  }
  
  .history-filter {
    flex-direction: column;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .practice-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .practice-header {
    background: rgba(0, 0, 0, 0.3);
  }
  
  .practice-card,
  .exam-card,
  .history-item,
  .practice-settings,
  .recommend-reason,
  .history-filter {
    background: #2c3e50;
    color: #ffffff;
  }
  
  .card-title,
  .exam-title,
  .practice-title,
  .section-title,
  .reason-title {
    color: #ffffff;
  }
  
  .card-desc,
  .exam-desc,
  .reason-text {
    color: #bdc3c7;
  }
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.practice-card,
.exam-card,
.history-item {
  animation: slideInUp 0.3s ease-out;
}

.practice-card:nth-child(1) { animation-delay: 0.1s; }
.practice-card:nth-child(2) { animation-delay: 0.2s; }
.practice-card:nth-child(3) { animation-delay: 0.3s; }
.practice-card:nth-child(4) { animation-delay: 0.4s; }
.practice-card:nth-child(5) { animation-delay: 0.5s; }