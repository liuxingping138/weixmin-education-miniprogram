/* pages/parent/parent.wxss */
.parent-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

/* 顶部功能介绍 */
.header-section {
  padding: 40rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  margin-bottom: 20rpx;
}

.feature-intro {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.intro-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.intro-content {
  flex: 1;
}

.intro-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.intro-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 功能导航 */
.nav-tabs {
  display: flex;
  background: #ffffff;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.nav-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.nav-tab.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  transition: transform 0.3s ease;
}

.nav-tab.active .tab-icon {
  transform: scale(1.1);
}

.tab-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  transition: color 0.3s ease;
}

.nav-tab.active .tab-text {
  color: #ffffff;
  font-weight: bold;
}

/* 标签页内容 */
.tab-content {
  padding: 0 30rpx;
}

/* 报告生成器 */
.report-generator {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.generator-header {
  margin-bottom: 30rpx;
}

.header-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.config-item {
  margin-bottom: 40rpx;
}

.item-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

/* 学生选择器 */
.student-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.student-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.student-option.selected {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  transform: translateY(-2rpx);
}

.student-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.student-name {
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}

/* 报告类型 */
.report-types {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.type-option {
  display: flex;
  align-items: center;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.type-option.selected {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.type-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.type-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 5rpx;
}

.type-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 时间范围 */
.time-range {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.range-option {
  padding: 15rpx 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666666;
  transition: all 0.3s ease;
}

.range-option.selected {
  border-color: #667eea;
  background: #667eea;
  color: #ffffff;
}

/* 生成按钮 */
.generate-actions {
  margin-top: 40rpx;
}

/* 历史报告 */
.report-history {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.history-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.report-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.report-item:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.report-icon {
  margin-right: 20rpx;
}

.icon-bg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffffff;
}

.icon-bg.weekly {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.icon-bg.monthly {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.icon-bg.semester {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
}

.report-info {
  flex: 1;
  margin-right: 20rpx;
}

.report-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10rpx;
}

.report-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.meta-icon {
  font-size: 20rpx;
  margin-right: 5rpx;
}

.report-actions {
  display: flex;
  gap: 10rpx;
}

/* 档案概览 */
.archive-overview {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-actions {
  display: flex;
  gap: 10rpx;
}

/* 学生档案卡片 */
.student-cards {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.student-card {
  background: linear-gradient(135deg, #f8f9fa, #ffffff);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.student-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.student-photo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 25rpx;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.student-class {
  font-size: 26rpx;
  color: #667eea;
  margin-bottom: 5rpx;
}

.student-id {
  font-size: 24rpx;
  color: #666666;
}

.card-stats {
  margin-bottom: 25rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.stat-row:last-child {
  margin-bottom: 0;
}

.card-stats .stat-item {
  flex: 1;
  text-align: center;
  padding: 15rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 10rpx;
  margin: 0 5rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 5rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
}

.card-progress {
  margin-top: 20rpx;
}

.progress-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.progress-label {
  font-size: 26rpx;
  color: #333333;
  min-width: 120rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
  min-width: 60rpx;
  text-align: right;
}

/* 成长记录 */
.growth-records {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.records-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-filter {
  display: flex;
  gap: 10rpx;
}

.filter-option {
  padding: 10rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666666;
  transition: all 0.3s ease;
}

.filter-option.active {
  border-color: #667eea;
  background: #667eea;
  color: #ffffff;
}

/* 时间轴 */
.record-timeline {
  position: relative;
  padding-left: 40rpx;
}

.record-timeline::before {
  content: '';
  position: absolute;
  left: 15rpx;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(to bottom, #667eea, #764ba2);
  border-radius: 2rpx;
}

.timeline-item {
  position: relative;
  margin-bottom: 40rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -32rpx;
  top: 10rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #667eea;
  border: 4rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.timeline-dot.achievement {
  background: #28a745;
}

.timeline-dot.activity {
  background: #ffc107;
}

.timeline-dot.homework {
  background: #17a2b8;
}

.timeline-content {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-left: 20rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.record-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.record-time {
  font-size: 24rpx;
  color: #666666;
}

.record-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.record-media {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.record-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

/* 沟通方式 */
.communication-methods {
  margin-bottom: 30rpx;
}

.method-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.method-item {
  position: relative;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx 25rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.method-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.method-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15rpx;
}

.method-icon.teacher {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.method-icon.group {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.method-icon.notice {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
}

.method-icon.feedback {
  background: linear-gradient(135deg, #43e97b, #38f9d7);
}

.method-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10rpx;
}

.method-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

.method-badge {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  background: #ff4757;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 最近消息 */
.recent-messages {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.messages-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-action {
  font-size: 26rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
  border: 2rpx solid #667eea;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.header-action:active {
  background: #667eea;
  color: #ffffff;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  transition: all 0.3s ease;
  position: relative;
}

.message-item.unread {
  background: rgba(102, 126, 234, 0.1);
  border-left: 6rpx solid #667eea;
}

.message-item:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.message-avatar {
  position: relative;
  margin-right: 20rpx;
}

.sender-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.message-type-badge {
  position: absolute;
  bottom: -5rpx;
  right: -5rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  color: #ffffff;
  border: 2rpx solid #ffffff;
}

.message-type-badge.teacher {
  background: #667eea;
}

.message-type-badge.group {
  background: #f093fb;
}

.message-type-badge.notice {
  background: #4facfe;
}

.message-content {
  flex: 1;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.sender-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.message-time {
  font-size: 24rpx;
  color: #666666;
}

.message-preview {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.4;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.message-status {
  margin-left: 15rpx;
}

.unread-dot {
  width: 12rpx;
  height: 12rpx;
  background: #ff4757;
  border-radius: 50%;
}

/* 快捷操作 */
.quick-actions {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.actions-header {
  margin-bottom: 30rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: translateY(-2rpx);
  background: #e9ecef;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 15rpx;
}

.action-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

/* 弹窗样式 */
.report-detail,
.archive-detail {
  background: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  background: #ffffff;
  z-index: 10;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.detail-close {
  font-size: 32rpx;
  color: #999999;
  padding: 10rpx;
}

.detail-preview {
  padding: 30rpx;
  text-align: center;
}

.report-preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 15rpx;
}

.detail-info {
  padding: 0 30rpx 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.detail-content {
  padding: 30rpx;
}

.archive-summary {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.summary-item {
  text-align: center;
  flex: 1;
}

.summary-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.archive-highlights {
  margin-top: 30rpx;
}

.highlights-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.highlight-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.highlight-item {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.detail-actions {
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
  border-top: 2rpx solid #f0f0f0;
  position: sticky;
  bottom: 0;
  background: #ffffff;
}

.detail-actions t-button {
  flex: 1;
}

/* 加载状态 */
t-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
}

/* 空状态 */
t-empty {
  margin: 100rpx 0;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .method-grid,
  .action-grid {
    grid-template-columns: 1fr;
  }
  
  .stat-row {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .card-stats .stat-item {
    margin: 0 0 15rpx 0;
  }
  
  .card-stats .stat-item:last-child {
    margin-bottom: 0;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .parent-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .report-generator,
  .report-history,
  .archive-overview,
  .growth-records,
  .recent-messages,
  .quick-actions,
  .method-item {
    background: #2c3e50;
    color: #ecf0f1;
  }
  
  .intro-title,
  .header-title,
  .detail-title {
    color: #ecf0f1;
  }
  
  .student-card,
  .timeline-content,
