/* pages/login/login.wxss */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
}

/* 顶部装饰 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  overflow: hidden;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -50rpx;
  animation: float 6s ease-in-out infinite;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 50rpx;
  left: -75rpx;
  animation: float 8s ease-in-out infinite reverse;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 150rpx;
  right: 100rpx;
  animation: float 10s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
  margin-bottom: 80rpx;
  z-index: 10;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.app-title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.app-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  line-height: 1.4;
}

/* 身份选择区域 */
.identity-section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  text-align: center;
  margin-bottom: 40rpx;
}

.identity-options {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.identity-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(10px);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.identity-item.active {
  background: rgba(255, 255, 255, 0.25);
  border-color: rgba(255, 255, 255, 0.5);
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.identity-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 16rpx;
}

.identity-text {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 8rpx;
}

.identity-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  line-height: 1.3;
}

/* 登录表单 */
.login-form {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 30rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  transition: border-color 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #667eea;
}

.input-icon {
  width: 32rpx;
  height: 32rpx;
  margin: 0 20rpx;
  opacity: 0.6;
}

.form-input {
  flex: 1;
  padding: 24rpx 20rpx 24rpx 0;
  font-size: 28rpx;
  background: transparent;
  border: none;
  outline: none;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
  background: #667eea;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.send-code-btn.disabled {
  background: #ccc;
  color: #999;
}

.send-code-btn::after {
  border: none;
}

/* 微信登录 */
.wechat-login-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.login-btn:not(.disabled):active {
  transform: translateY(2rpx);
}

.login-btn.disabled {
  background: #ccc;
  color: #999;
}

.login-btn::after {
  border: none;
}

/* 登录方式切换 */
.login-switch {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}

.switch-text {
  font-size: 26rpx;
  color: #666;
  transition: color 0.3s ease;
}

.switch-text.active {
  color: #667eea;
  font-weight: 500;
}

.switch-divider {
  font-size: 26rpx;
  color: #ccc;
}

/* 注册区域 */
.register-section {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.register-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-right: 8rpx;
}

.register-link {
  font-size: 26rpx;
  color: white;
  font-weight: 500;
  text-decoration: underline;
}

/* 协议区域 */
.agreement-section {
  margin-top: auto;
  padding: 8rpx 40rpx 84rpx; /* 更靠上一点，底部安全距离更大 */
}

.agreement-checkbox {
  width: 100%;
  max-width: 740rpx;
  margin: 0 auto;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 6rpx;                        /* 更紧凑的间距 */
  white-space: nowrap;              /* 父容器不换行 */
  overflow: hidden;
}

.checkbox-box {
  width: 22rpx;                     /* 缩小方框，给文案让位 */
  height: 22rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.92);
  border-radius: 6rpx;
  margin: 0;
  box-sizing: border-box;
  position: relative;
  flex-shrink: 0;
  background: rgba(255, 255, 255, 0.06);
  backdrop-filter: blur(2px);
  transition: transform 0.12s ease, background 0.2s ease, border-color 0.2s ease;
}

.checkbox-box.checked {
  background: linear-gradient(135deg, #34d399 0%, #60a5fa 100%);
  border-color: rgba(255, 255, 255, 0.98);
  transform: scale(1.06);
}

.checkbox-tick {
  position: absolute;
  left: 8rpx;
  top: 5rpx;
  width: 10rpx;
  height: 18rpx;
  border-right: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(45deg);
  box-sizing: border-box;
}

.checkbox-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
}

.agreement-text {
  font-size: 22rpx;                 /* 更主流的一行字号 */
  color: rgba(255, 255, 255, 0.92);
  line-height: 1.6;
  text-align: center;
  white-space: nowrap;
}

.agreement-link {
  color: #ffffff;
  text-decoration: underline;
  font-weight: 600;
  text-underline-offset: 6rpx;
}

/* 底部装饰 */
.footer-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
}

.decoration-wave {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50% 50% 0 0;
}

/* Toast提示 */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  z-index: 9999;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.toast.show {
  opacity: 1;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}